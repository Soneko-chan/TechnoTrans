<Window x:Class="UI.AddEditRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/Редактирование заявки" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Форма заявки на ремонт" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Основная информация -->
                <GroupBox Header="Основная информация" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Марка автомобиля*" Margin="0,5"/>
                        <TextBox x:Name="carTypeTextBox" MaxLength="50" Margin="0,2,0,10"/>

                        <TextBlock Text="Модель автомобиля*" Margin="0,5"/>
                        <TextBox x:Name="carModelTextBox" MaxLength="50" Margin="0,2,0,10"/>
                    </StackPanel>
                </GroupBox>

                <!-- Информация о клиенте -->
                <GroupBox Header="Информация о клиенте" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="ФИО клиента*" Margin="0,5"/>
                        <TextBox x:Name="clientNameTextBox" MaxLength="100" Margin="0,2,0,10"/>

                        <TextBlock Text="Номер телефона*" Margin="0,5"/>
                        <TextBox x:Name="phoneTextBox" MaxLength="20" Margin="0,2,0,10"/>
                    </StackPanel>
                </GroupBox>

                <!-- Описание проблемы -->
                <GroupBox Header="Описание проблемы" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Описание проблемы*" Margin="0,5"/>
                        <TextBox x:Name="problemTextBox" MaxLength="500" Height="80" 
                                TextWrapping="Wrap" AcceptsReturn="True" Margin="0,2,0,10"/>
                    </StackPanel>
                </GroupBox>

                <!-- Дополнительная информация -->
                <GroupBox Header="Дополнительная информация">
                    <StackPanel>
                        <TextBlock Text="Статус заявки" Margin="0,5"/>
                        <ComboBox x:Name="statusComboBox" Margin="0,2,0,10">
                            <ComboBoxItem Content="Новая заявка"/>
                            <ComboBoxItem Content="В процессе ремонта"/>
                            <ComboBoxItem Content="Ожидание запчастей"/>
                            <ComboBoxItem Content="Завершена"/>
                        </ComboBox>

                        <TextBlock Text="Ответственный механик" Margin="0,5"/>
                        <TextBox x:Name="mechanicTextBox" MaxLength="100" Margin="0,2,0,10"/>

                        <TextBlock Text="Комментарии" Margin="0,5"/>
                        <TextBox x:Name="commentsTextBox" MaxLength="500" Height="60" 
                                TextWrapping="Wrap" AcceptsReturn="True" Margin="0,2,0,10"/>

                        <TextBlock Text="Запчасти" Margin="0,5"/>
                        <TextBox x:Name="sparePartsTextBox" MaxLength="300" Height="40" 
                                TextWrapping="Wrap" Margin="0,2,0,10"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Click="Save_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>