<Window x:Class="UI.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Статистика заявок" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Статистика заявок на ремонт" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="С:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="StartDatePicker" Width="100" Margin="0,0,10,0"/>

            <TextBlock Text="По:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="EndDatePicker" Width="100" Margin="0,0,10,0"/>

            <Button Content="Применить" Width="80" Height="25" Click="ApplyFilter_Click"/>
            <Button Content="Сбросить" Width="80" Height="25" Margin="5,0,0,0" Click="ResetFilter_Click"/>
        </StackPanel>

        <TabControl Grid.Row="2">
            <TabItem Header="По статусам">
                <oxy:PlotView x:Name="StatusPlotView"/>
            </TabItem>

            <TabItem Header="По механикам">
                <oxy:PlotView x:Name="MechanicPlotView"/>
            </TabItem>

            <TabItem Header="По месяцам">
                <oxy:PlotView x:Name="MonthPlotView"/>
            </TabItem>

            <!-- ДОБАВЛЯЕМ ВКЛАДКУ ДЛЯ ТИПОВ АВТОМОБИЛЕЙ -->
            <TabItem Header="По типам авто">
                <oxy:PlotView x:Name="CarTypePlotView"/>
            </TabItem>
        </TabControl>

        <!-- Кнопка закрытия -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Закрыть" Width="80" Height="25" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>